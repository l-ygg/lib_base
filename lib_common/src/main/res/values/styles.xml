<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
        <!--        <item name="android:windowAnimationStyle">@style/Animation_Activity</item>-->
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/mColorPrimary</item>
        <item name="colorPrimaryDark">@color/mColorPrimaryDark</item>
        <item name="colorAccent">@color/mColorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--取消水波纹效果-->
        <!--        <item name="android:colorControlHighlight">@android:color/transparent</item>-->
    </style>

    <!--启动页-->
    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/Animation_Splash</item>
    </style>

    <style name="Animation_Splash" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_scale_in</item>
    </style>

    <style name="TextInputWhiteStyle" parent="AppTheme">
        <!--输入框提示字体色-->
        <item name="android:textColorHint">#ffffff</item>
        <!--输入框下划线默认颜色-->
        <!--        <item name="colorControlNormal">@color/white</item>-->
        <!--输入框下划线选中状态色-->
        <item name="colorControlActivated">#ffffff</item>
        <!--输入框光标颜色-->
        <item name="colorControlHighlight">#ffffff</item>
    </style>

    <style name="SearchBarStyle" parent="MaterialSearchBarLight">
        <item name="mt_searchBarColor">@color/color_default_bg</item>
        <item name="mt_dividerColor">@color/searchBarDividerColor</item>
        <item name="mt_navIconTint">@color/black</item>
        <item name="mt_searchIconTint">@color/black</item>
        <item name="mt_clearIconTint">@color/black</item>
        <item name="mt_menuIconTint">@color/searchBarMenuIconTintColor</item>
        <item name="mt_backIconTint">@color/black</item>
        <item name="mt_textColor">@color/black</item>
        <item name="mt_hintColor">@color/searchPlaceholderColor</item>
        <item name="mt_placeholderColor">@color/searchPlaceholderColor</item>
        <item name="mt_backIconDrawable">@drawable/ic_back_black</item>
        <item name="mt_hint">搜索关键词...</item>
    </style>

</resources>